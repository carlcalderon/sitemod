{
  "name": "sitemod",
  "description" : "Tweak sites the way you want them to be",
  "version": "0.1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "sitemod.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["runtime.js"]
    }
  ]
}
